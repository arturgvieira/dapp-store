{
  "name": "@mobius-network/core",
  "version": "0.0.1",
  "description": "Mobius Network Core",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack -w",
    "clean": "rimraf dist",
    "build:webpack": "webpack --config webpack.production.config.js --progress --profile --colors",
    "build": "cross-env npm run clean && npm run build:webpack",
    "prettier": "prettier --write src/**/*.js *.js",
    "lint": "eslint --fix --ext js .",
    "format": "npm run prettier && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.3",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.7.0",
    "jest": "22.4.3",
    "prettier": "^1.12.1",
    "rimraf": "2.6.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/jest/shim.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/assetsTransformer.js"
    },
    "testMatch": [
      "**/?(*.)(spec|test).js?(x)"
    ],
    "transform": {
      "\\.js$": "babel-jest"
    }
  },
  "dependencies": {
    "base64-js": "^1.3.0",
    "scrypt-async": "^2.0.0",
    "stellar-hd-wallet": "^0.0.6",
    "tweetnacl": "^1.0.0"
  }
}
